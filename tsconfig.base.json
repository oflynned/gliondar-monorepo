{
  "compileOnSave": false,
  "compilerOptions": {
    "isolatedModules": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gliondar/fe/design-system": ["libs/fe/design-system/src/index.ts"],
      "@gliondar/fe/mui": ["libs/fe/mui/src/index.ts"],
      "@gliondar/shared/mock-data": ["libs/shared/mock-data/src/index.ts"],
      "@gliondar/shared/types": ["libs/shared/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
